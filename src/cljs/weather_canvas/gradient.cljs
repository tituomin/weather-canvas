(ns weather-canvas.gradient)

(def temperature
  {:direction :up
   :colors
   [
    {:range [-100    -50]
     :from  '(0xff 0xff 0xff)
     :to    '(0xff 0xff 0xff)}

    {:range [-50    0]
     :from  '(0x00 0x00 0xff)
     :to    '(0xff 0xff 0xff)}

    {:range [0    15]
     :from  '(0xff 0xff 0xff)
     :to    '(0xff 0xff 0x66)}
    
    {:range [15    30]
     :from  '(0xff 0xff 0x66)
     :to    '(0xff 0x00 0x00)}
    ]}
)

(def rain
  {:direction :up
   :colors
   [
    {:range [-1    0]
     :from  '(0x11 0x11 0x11)
     :to    '(0x11 0x11 0x11)}

    {:range [0    200]
     :from  '(0x22 0x22 0x44)
     :to    '(0xee 0xee 0xff)}

    ]}
)

(def snow
  {:direction :up
   :colors
   [
    {:range [-1    0]
     :from  '(0x11 0x11 0x11)
     :to    '(0x11 0x11 0x11)}

    {:range [0    130]
     :from  '(0x3f 0x3e 0x55)
     :to    '(0xee 0xee 0xff)}
    ]}
)



